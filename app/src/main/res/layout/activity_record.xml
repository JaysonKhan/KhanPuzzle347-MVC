<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:gravity="center">

    <TextView
        android:id="@+id/winFirstTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O'yinni oldin o'yna natijalaringiz shu yerda yozilib boradi..."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_margin="30dp"
        android:visibility="gone"
        android:textStyle="italic"
        android:textColor="#FF0000"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinish"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>


        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaqt"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerWin1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="-200dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/nameFirst"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="birinchi:"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>



        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/atemptFirst"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinish"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>



        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/timeFirst"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaqt"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerWin2"
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ikkinchi:"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/atemptSecond"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinish"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/timeSecond"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaqt"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linerWin3"
        android:layout_gravity="center"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="20dp">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uchinchi:"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>



        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/atemptThird"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urinish"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>



        <TextView
            android:layout_weight="1"
