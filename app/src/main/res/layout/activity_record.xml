            android:text="Vaqt"
            android:textAllCaps="true"
            android:textSize="23sp"
            android:textColor="@color/golden"/>
    </LinearLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonHome"
        android:text="asosiy"
        style="@style/buttonStyle" />

</FrameLayout>