<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:weightSum="11"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/volumeButton"
            android:layout_width="50dp"
            android:layout_gravity="right|center"
            tools:src="@drawable/volumeoff"
            android:backgroundTint="@color/golden"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:weightSum="10"
            android:orientation="horizontal">
            <ImageView
                android:rotation="-90"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_margin="15dp"
                android:src="@drawable/puzzle"
                app:tint="@color/golden" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="7"
                android:padding="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/startGame"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/border"
                    android:text="O'ynash"
                    android:textSize="34sp"
                    android:textColor="@color/golden"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/fearless"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/border"
                    android:text="yuqori natijalar"
                    android:textSize="34sp"
                    android:textColor="@color/golden"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/infoButton"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/border"
                    android:text="Ma'lumot"
                    android:textSize="34sp"
                    android:textColor="@color/golden"/>
            </LinearLayout>
        </LinearLayout>



</LinearLayout>